import webbrowser

animes = {
    "Dragon Ball": "Saiyajin",
    "One Piece": "Pirata que estica",
    "Naruto": "Hokage",
    "Blue Lock": "PNG"
}

def iniciar_anime(anime):
    print(f"\nVoc√™ iniciou o anime {anime}!")
    
    urls = {
        "Dragon Ball": "https://www.youtube.com/watch?v=3ihxNAYNbwU",
        "One Piece": "https://www.youtube.com/watch?v=mej18Qxunx0",
        "Naruto": "https://www.youtube.com/watch?v=PBvgqTc2oBw",
        "Blue Lock": "https://www.youtube.com/watch?v=TEPt4FQeTeI"
    }

    url = urls.get(anime)
    if url:
        print("Abrindo link...")
        webbrowser.open(url)
        print("üé• Reproduzindo v√≠deo! üé•")
    else:
        print("Anime n√£o dispon√≠vel para assistir!")

def menu():
    print("\n--- Menu ---")
    print("[1] Deletar anime")
    print("[2] Assistir anime")
    print("[3] Sair")

# Exibir a lista de animes
print("\nLista de animes:")
for anime, descricao in animes.items():
    print(f"{anime} ({descricao})")

while True:
    menu()
    escolha = input("\nEscolha uma op√ß√£o: ").strip()

    if escolha == "1":
        anime_to_delete = input("\nQual anime voc√™ deseja deletar? ").strip()
        if anime_to_delete in animes:
            del animes[anime_to_delete]
            print(f"{anime_to_delete} foi deletado.")
        else:
            print("Anime n√£o encontrado.")
    
    elif escolha == "2":
        anime_to_watch = input("\nQual anime voc√™ deseja assistir? ").strip()
        if anime_to_watch in animes:
            iniciar_anime(anime_to_watch)
        else:
            print("Anime n√£o encontrado.")
    
    elif escolha == "3":
        print("Saindo...")
        break
    
    else:
        print("Op√ß√£o inv√°lida. Por favor, escolha uma op√ß√£o entre 1 e 3.")
